# Analytics Integration Environment Variables

# ==================== KAFKA ====================
# Kafka broker connection string
KAFKA_BROKER=localhost:9092

# Enable SSL (set to 'true' for production)
KAFKA_SSL=false

# SASL Authentication (optional)
KAFKA_SASL_ENABLED=false
KAFKA_SASL_USERNAME=
KAFKA_SASL_PASSWORD=

# ==================== DATABASE ====================
# PostgreSQL Analytics Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=analytics
DB_PASSWORD=analytics123
DB_NAME=learning_platform

# Supabase (if using instead of raw PostgreSQL)
SUPABASE_URL=http://localhost:3000
SUPABASE_ANON_KEY=your_anon_key

# ==================== GRAFANA ====================
# Grafana connection for embedded dashboards
GRAFANA_URL=http://localhost:3000
GRAFANA_API_KEY=

# ==================== LOGGING ====================
LOG_LEVEL=info
LOG_FORMAT=json

# ==================== SERVICES ====================
# Port for event producer API
PRODUCER_PORT=3001

# Port for consumer services
CONSUMER_PORT=3002

# Enable debug mode (logs all events)
DEBUG_MODE=false

# ==================== PERFORMANCE ====================
# Consumer batch size
CONSUMER_BATCH_SIZE=100

# Consumer commit interval (ms)
CONSUMER_COMMIT_INTERVAL=5000

# Producer compression (0=none, 1=gzip, 2=snappy, 3=lz4, 4=zstd)
PRODUCER_COMPRESSION=1
